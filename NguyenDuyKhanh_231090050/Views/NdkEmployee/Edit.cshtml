@model NguyenDuyKhanh_2310900050.Models.NdkEmployee
@{
    ViewData["Title"] = "Sửa thông tin nhân viên";
    Layout = "~/Views/Shared/_NdkLayout.cshtml";
}
<h2>Sửa thông tin nhân viên</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="NdkEmpId" />
    <div class="form-group">
        <label>Tên nhân viên</label>
        <input asp-for="NdkEmpName" class="form-control" />
    </div>
    <div class="form-group">
        <label>Level</label>
        <input asp-for="NdkEmpLevel" class="form-control" />
    </div>
    <div class="form-group">
        <label>Ngày vào</label>
        <input asp-for="NdkEmpStartDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label>Trạng thái</label>
        <input asp-for="NdkEmpStatus" type="checkbox" /> Show
    </div>
    <button type="submit" class="btn btn-primary">Lưu</button>
    <a href="/NdkEmployee/Index" class="btn btn-secondary">Quay lại</a>
</form>