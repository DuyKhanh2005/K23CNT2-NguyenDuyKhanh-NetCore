@model IEnumerable<NdkDay03BT.Models.Product>

<h2 class="text-center my-4">Danh sách sản phẩm</h2>

<!-- Nút thêm mới sản phẩm -->
<div class="text-end mb-3">
    <a href="/Product/Create" class="btn btn-primary">Thêm sản phẩm mới</a>
</div>

<!-- Hiển thị danh sách sản phẩm -->
<div class="container">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-3 mb-4">
                <div class="card h-100 text-center shadow-sm">
                    <img src="@product.ImageUrl"
                         class="card-img-top"
                         alt="@product.Name"
                         style="height: 200px; object-fit: cover; cursor: pointer;"
                         onclick="window.location.href='/Product/Details/@product.Id'" />
                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text text-danger">@product.Price.ToString("N0") đ</p>
                    </div>
                    <div class="card-footer">
                        <a href="/Product/Edit/@product.Id" class="btn btn-warning btn-sm">Sửa</a>
                        <a href="/Product/Delete/@product.Id" class="btn btn-danger btn-sm">Xóa</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>