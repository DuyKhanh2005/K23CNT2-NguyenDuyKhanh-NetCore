@model IEnumerable<NdkDay03BT.Models.Product>

<h2>Danh sách sản phẩm</h2>
<a href="/Product/Create" class="btn btn-primary mb-3">Thêm sản phẩm mới</a>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên</th>
            <th>Giá</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("N0") đ</td>
                <td>
                    <a href="/Product/Details/@product.Id" class="btn btn-info btn-sm">Chi tiết</a>
                    <a href="/Product/Edit/@product.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a href="/Product/Delete/@product.Id" class="btn btn-danger btn-sm">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>