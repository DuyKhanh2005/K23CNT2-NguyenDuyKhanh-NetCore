@model NdkLesson07.Models.NdkEmployee
@{
    ViewData["Title"] = "Sửa thông tin nhân viên";
}
<h1>Sửa thông tin nhân viên</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="NdkEdit" asp-route-id="@Model.NdkId" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NdkId" />
            <div class="form-group">
                <label class="control-label">Mã nhân viên</label>
                <input class="form-control" value="@Model.NdkId" readonly />
            </div>
            <div class="form-group">
                <label asp-for="NdkName" class="control-label"></label>
                <input asp-for="NdkName" class="form-control" />
                <span asp-validation-for="NdkName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NdkBirthDay" class="control-label"></label>
                <input asp-for="NdkBirthDay" class="form-control" type="date" />
                <span asp-validation-for="NdkBirthDay" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NdkEmail" class="control-label"></label>
                <input asp-for="NdkEmail" class="form-control" />
                <span asp-validation-for="NdkEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NdkPhone" class="control-label"></label>
                <input asp-for="NdkPhone" class="form-control" />
                <span asp-validation-for="NdkPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NdkSalary" class="control-label"></label>
                <input asp-for="NdkSalary" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="NdkSalary" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <input class="form-check-input" asp-for="NdkStatus" />
                <label class="form-check-label" asp-for="NdkStatus">
                    @Html.DisplayNameFor(model => model.NdkStatus)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu thay đổi" class="btn btn-primary" />
                <a asp-action="NdkIndex" class="btn btn-secondary ml-2">Quay lại danh sách</a>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}